package mercado.controller;

import java.util.ArrayList;

import mercado.model.CafeTradicional;

public class mercadoController implements mercadorepos {
	
	private ArrayList<CafeTradicional> listacafes = new ArrayList<CafeTradicional>();
	

	@Override
	public void cadastrar(CafeTradicional nome) {
		listacafes.add(nome){
			System.out.println("Café adicionado");
		}
		
	}

	@Override
	public void listarTodas() {
		for (var cafe : listacafes){
			cafe.visualizar();
		}
	}

	@Override
	public void deletar(CafeTradicional nome) {
		var cafe = buscarNaCollection(nome);
		if( cafe!= null) {
			if(listacafes.remove(cafe) == true) {
				System.out.println("\nO cafe: " + cafe + "foi deletado com Sucesso!");
			}else {
				System.out.println("\nO café: " + cafe + "não foi encontrada!" );
			}
		}
		
	}

	@Override
	public void ProcurarPorNome(String nome) {
		var cafe = buscarNaCollection(nome );
		if(cafe != null) {
			cafe.visualizar();
		}else {
			System.out.println("\nCafé não foi encontrado");
		}
		
		
	}

	private CafeTradicional buscarNaCollection(String nome) {
		for( var cafe : listacafes) {
			if(cafe.getNome() == nome) {
				return cafe;
			}
		}
		return null;
	}
	
	

}
